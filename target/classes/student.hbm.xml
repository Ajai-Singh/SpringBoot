<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "com.example.demo.controller.Models.Student" table = "students">

        <meta attribute = "class-description">
            This class contains the subject details.
        </meta>

        <id name = "id" type = "int" column = "id">
            <generator class="native"/>
        </id>

        <property name = "firstName" column = "firstName" type = "string"/>
        <property name = "lastName" column = "lastName" type = "string"/>
        <property name = "address" column = "address" type = "string"/>
        <property name = "emergencyContactName" column = "emergencyContactName" type = "string"/>
        <property name = "emergencyContactPhoneNumber" column = "emergencyContactPhoneNumber" type = "string"/>
    </class>
</hibernate-mapping>